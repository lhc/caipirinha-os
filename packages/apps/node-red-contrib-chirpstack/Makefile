include $(TOPDIR)/rules.mk

PKG_NPM_ORG:=@chirpstack
PKG_NPM_NAME:=node-red-contrib-chirpstack
PKG_NAME:=$(PKG_NPM_NAME)
PKG_VERSION:=4.1.1
PKG_RELEASE:=1

PKG_SOURCE:=$(PKG_NPM_NAME)-$(PKG_VERSION).tgz
PKG_SOURCE_URL:=https://registry.npmjs.org/$(PKG_NPM_ORG)/$(PKG_NPM_NAME)/-/
PKG_HASH:=071980485044b34f8e8b7dc95da189a3ca34f6acce2d73c9094e47a40831d0d5

PKG_BUILD_DEPENDS:=node/host

PKG_MAINTAINER:=Orne Brocaar <info@brocaar.com>
PKG_LICENSE:=MIT
PKG_LICENSE_FILES:=LICENSE

include $(INCLUDE_DIR)/package.mk

define Package/node-red-contrib-chirpstack
	SECTION:=chirpstack
	CATEGORY:=ChirpStack
	TITLE:=ChirpStack Node-RED nodes
	URL:=https://github.com/chirpstack/node-red-contrib-chirpstack
	DEPENDS:=+node +node-npm +node-red
endef

define Package/node-red-contrib-chirpstack/description
	ChirpStack Node-RED nodes
endef

TAR_OPTIONS+= --strip-components 1
TAR_CMD=$(HOST_TAR) -C $(1) $(TAR_OPTIONS)

NODEJS_CPU:=$(subst powerpc,ppc,$(subst aarch64,arm64,$(subst x86_64,x64,$(subst i386,ia32,$(ARCH)))))
TMPNPM:=$(shell mktemp -u XXXXXXXXXX)

TARGET_CFLAGS+=$(FPIC)
TARGET_CPPFLAGS+=$(FPIC)

NPM_FLAGS:= \
	$(MAKE_VARS) \
	$(MAKE_FLAGS) \
	npm_config_arch=$(NODEJS_CPU) \
	npm_config_target_arch=$(NODEJS_CPU) \
	npm_config_build_from_source=true \
	npm_config_nodedir=$(STAGING_DIR)/usr/ \
	npm_config_prefix=$(PKG_INSTALL_DIR)/usr/ \
	npm_config_cache=$(TMP_DIR)/npm-cache-$(TMPNPM) \
	npm_config_tmp=$(TMP_DIR)/npm-tmp-$(TMPNPM)

define Build/Compile
	$(NPM_FLAGS) npm i -g --production $(PKG_BUILD_DIR)
	$(NPM_FLAGS) npm i --production --prefix=$(PKG_BUILD_DIR) --target_arch=$(NODEJS_CPU) --prefer-dedupe
	rm -rf $(TMP_DIR)/npm-tmp-$(TMPNPM)
	rm -rf $(TMP_DIR)/npm-cache-$(TMPNPM)
endef

define Package/node-red-contrib-chirpstack/install
	$(INSTALL_DIR) $(1)/usr/lib/node/node-red/node_modules/$(PKG_NPM_ORG)/$(PKG_NPM_NAME)

	$(CP) $(PKG_INSTALL_DIR)/usr/lib/node_modules/$(PKG_NPM_ORG)/$(PKG_NPM_NAME)/{*.json,*.md,LICENSE} 	$(1)/usr/lib/node/node-red/node_modules/$(PKG_NPM_ORG)/$(PKG_NPM_NAME)
	$(CP) $(PKG_INSTALL_DIR)/usr/lib/node_modules/$(PKG_NPM_ORG)/$(PKG_NPM_NAME)/{node_modules,src} 	$(1)/usr/lib/node/node-red/node_modules/$(PKG_NPM_ORG)/$(PKG_NPM_NAME)
endef

$(eval $(call BuildPackage,node-red-contrib-chirpstack))